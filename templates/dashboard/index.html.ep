% layout 'default';

<h1><%= $name %> - Dashboard</h1>

<div id="rexfile_info">
Rexfile Loaded: <%= $rexfile %>
</div>

<br />

<div id="task_info">
Tasks Available: 

<ul>
% for my $task (@$tasks) {
	<li><a href="/task/<%= $task->{name} %>"><%= $task->{name} %> : <%= $task->{desc} %></a></li>
% }
</ul>
</div>
